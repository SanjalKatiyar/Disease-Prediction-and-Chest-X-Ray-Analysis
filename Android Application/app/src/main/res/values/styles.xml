<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressBarMedium" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_medium</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="CustomProgressBarLow" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_low</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="CustomProgressBarHigh" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_high</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>
</resources>
